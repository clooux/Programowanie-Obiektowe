<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">

  <title>Categories</title>
</head>

<body>
  <h1>List of Categories</h1>
  <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          #for(category in categories):
            <tr>
              <td>#(category.name)</td>
              <td>#(category.description)</td>
              <td><button onclick="location.href='/categories/#(category.id)'" type="button">Details</button></td>
              <td><button onclick="location.href='/categories/#(category.id)'" type="button">Delete</button></td>
            </tr>
          #endfor 
        </tbody>
      </table>
</body>
</html>