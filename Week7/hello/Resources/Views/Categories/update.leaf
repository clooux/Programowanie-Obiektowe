<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">

  <title>Update category</title>
</head>

<body>
  <h1>Update category</h1>
  <form action="/categories/#(category.id)/update" method="post">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="#(category.name)" required>

    <label for="price">Description:</label>
    <input type="text" id="description" name="description" value="#(category.description)" required>

    <button type="submit">Update category</button>
  </form>

  <br>
  <button onclick="location.href='/categories/#(category.id)'" type="button">Return</button>
</body>
</html>