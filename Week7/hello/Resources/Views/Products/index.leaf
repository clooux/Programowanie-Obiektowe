<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">

  <title>Products</title>
</head>

<body>
  <h1>List of Products</h1>
  <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          #for(product in products):
            <tr>
              <td>#(product.name)</td>
              <td>#(product.price)</td>
              <td><button onclick="location.href='/products/#(product.id)'" type="button">Details</button></td>
              <td><button onclick="location.href='/products/#(product.id)'" type="button">Delete</button></td>
            </tr>
          #endfor 
        </tbody>
      </table>
</body>
</html>